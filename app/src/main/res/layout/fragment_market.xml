<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEB887">


    <TextView
        android:id="@+id/tv_showshoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="显示数据"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_showbrandshoes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape_table_item_edit"
        android:hint="brand"
        app:layout_constraintBottom_toBottomOf="@+id/tv_showshoes"
        app:layout_constraintStart_toEndOf="@+id/tv_showshoes"
        app:layout_constraintTop_toTopOf="@+id/tv_showshoes" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shoe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/tv_showshoes" />

</androidx.constraintlayout.widget.ConstraintLayout>